server:
  host: 0.0.0.0
  port: 8888
  base_path: /mcp
  
obsidian:
  api_url: http://localhost:27123  # Obsidian REST API URL
  vault_path: /path/to/your/vault  # Path to Obsidian vault
  api_key: YOUR_OBSIDIAN_API_KEY_HERE  # Set via environment variable or update here
  
security:
  api_key_header: Authorization
  require_auth: true
  
features:
  enable_streaming: true
  max_search_results: 50
  cache_ttl: 300
  
logging:
  level: DEBUG
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"

